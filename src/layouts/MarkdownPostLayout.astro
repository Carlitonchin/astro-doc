---
import BaseLayout from "./BaseLayout.astro";
import { fade } from "astro:transitions";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <img transition:animate={fade({duration:"1s"})} src={frontmatter.image.url} alt={frontmatter.image.alt} />
  <p transition:animate={fade({duration:"1s"})}><em>{frontmatter.description}</em></p>
  <p>{frontmatter.pubDate.slice(0, 10)}</p>
  <p>Escrito por <a href="/about">{frontmatter.author}</a></p>

  <div class="tags">
    {
      frontmatter.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
  <slot />
  <style>
    img {
      width: 300px;
    }

    a {
      color: #00539f;
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
    }

    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: 0.5em;
      padding: 0.5em 1em;
      font-size: 1.15em;
      background-color: #f8fcfd;
    }
  </style>
</BaseLayout>
